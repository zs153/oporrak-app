<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Calendario</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
  <!-- bootstrap -->
  <link rel="stylesheet" href="/css/bootstrap-icons.css">
  <!-- custom -->
  <link rel="stylesheet" href="/css/estilos.min.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel='stylesheet' href='/css/js-year-calendar.css'>
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'CALENDARIO' }) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card mt-1">
                <% if(typeof alerts !='undefined' ) { %>
                <% alerts.map(function (alert){ %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <%- alert.msg %>
                </div>
                <% }) %>
                <% } %>
                <form action="/admin/calendarios/calendario" method="POST">
                  <input type="hidden" name="idusua" id="idusua" value="">
                  <input type="hidden" name="tipest" id="tipest" value="">
                  <div class="card-header">
                    <h3 class="card-title">Calendario</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="form-label">AÃ±o</div>
                          <select class="form-select" id="cboyea" value="">
                            <option value="<%- new Date().getFullYear() %>">
                              <%- new Date().getFullYear() %>
                            </option>
                            <option value="<%- new Date().getFullYear() +1 %>">
                              <%- new Date().getFullYear() +1 %>
                            </option>
                          </select>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="mb-1">
                          <div class="form-label">Oficina</div>
                          <select class="form-select" id="cboofi" name="ofiusu" value="">
                            <% datos.oficinas.map(element=> { %>
                            <option value="<%- element.IDOFIC %>" <%- element.IDOFIC === user.oficina ? "selected":"" %>>
                              <%- element.DESOFI %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                      <div class="col-4">
                        <div class="mb-1">
                          <div class="form-label">Usuario</div>
                          <select class="form-select" id="cbousu" value="">
                          </select>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="mb-1">
                          <div class="form-label">Estado</div>
                          <select class="form-select" id="cboest" value="">
                            <option value="0" data-foo="" selected>
                              TODOS
                            </option>
                            <% datos.arrTiposEstado.map(element=> { %>
                            <option value="<%- element.ID %>" data-foo="<%- element.COLOR %>">
                              <%- element.DES %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div id="calendar"></div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal modal-blur fade" id="modal-tras" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="container-xl">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title mt-0">Traspaso</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="card-body">
                <div class="row">
                  <div class="col-12">
                    <div class="mb-1">
                      <div class="form-label">Oficina destino</div>
                      <select class="form-select" id="cbodes" name="ofides" value="">
                        <% datos.oficinas.map(element=> { %>
                        <option value="<%- element.IDOFIC %>">
                          <%- element.DESOFI %>
                        </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="fecest" id="fectra">
              <button type="button" class="btn btn-link" id="btnCancel" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
              <button type="button" class="btn btn-primary ms-auto" id="btnAcept" onclick="eventoTraspaso()">Aceptar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal modal-blur fade" id="modal-bolsa" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="container-xl">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title mt-0">Horas bolsa</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="card-body">
                <div class="row">
                  <div class="col-6">
                    <div class="mb-1">
                      <div class="form-label">Desde</div>
                      <!-- TODO -->
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="mb-1">
                      <div class="form-label">hASTA</div>
                      <!-- TODO -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="fecest" id="fectra">
              <button type="button" class="btn btn-link" id="btnCancel" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
              <button type="button" class="btn btn-primary ms-auto" id="btnAcept" onclick="eventoTraspaso()">Aceptar</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/js-year-calendar.js"></script>
  <script src="/js/js-year-calendar.es.js"></script>
  <script>
    async function insertEvento(evento) {
      let xhr = new XMLHttpRequest()

      return new Promise(function(resolve, reject) {
        xhr.onreadystatechange = function() {
          if (xhr.readyState == 4) {
            if (xhr.status !== 200) {
              reject("Error, status code = " + xhr.status)
            } else {
              const result = JSON.parse(xhr.response)
              const d = result.FECEST.split('/')

              // insert en el calendario
              let dataSource = calendario.getDataSource()
              const estado = {
                idesta: result.idesta,
                usuest: params.usuest,
                tipest: tipo,
                id: result.idesta,
                startDate: new Date(d[2] + '-' + d[1] + '-' + d[0]),
                endDate: new Date(d[2] + '-' + d[1] + '-' + d[0]),
                color,
              }

              dataSource.push(estado)
              if (estado.tipest === <%- datos.tiposEstado.traspaso.ID %>) {
                document.getElementById('modal-tras').style.display = 'none'
                calendario.setDataSource(dataSource)
              }
            }
          }
        }

        xhr.open('POST', 'http://localhost:8100/api/estados/insert', true);
        xhr.setRequestHeader('Content-Type', 'application/json; charset=utf-8');
        xhr.send(JSON.stringify(evento))
      })
    }
    async function deleteEvento(evento) {
      const xhr = new XMLHttpRequest()

      return new Promise(function(resolve, reject) {
        xhr.onreadystatechange = function() {
          if (xhr.readyState == 4) {
            if (xhr.status !== 200) {
              reject("Error, status code = " + xhr.status)
            } else {
              // update el calendario
              let dataSource = calendario.getDataSource()

              dataSource = dataSource.filter(itm => itm.idesta !== evento.estado.IDESTA)
              calendario.setDataSource(dataSource, {
                preventRendering: false
              })
            }
          }
        }

        xhr.open('POST', 'http://localhost:8100/api/estados/delete', true);
        xhr.setRequestHeader('Content-Type', 'application/json; charset=utf-8');
        xhr.send(JSON.stringify(evento))
      })
    }
    async function getEstadosWithPromise(prms) {
      var xhr = new XMLHttpRequest();

      return new Promise(function(resolve, reject) {
        xhr.onreadystatechange = function() {
          if (xhr.readyState == 4) {
            if (xhr.status !== 200) {
              reject("Error, status code = " + xhr.status)
            } else {
              resolve(JSON.parse(xhr.response))
            }
          }
        }

        xhr.open('POST', 'http://localhost:8100/api/estados/usuarios', true);
        xhr.setRequestHeader('Content-Type', 'application/json; charset=utf-8')
        xhr.send(JSON.stringify(prms))
      })
    }
    async function estadosUsuario(prms, tipo) {
      estados = await getEstadosWithPromise(prms)
      getEstadosTipo(tipo)
    }
    const eventoTraspaso = async (e) => {
      let fecha = null
      if (tipo === <%- datos.tiposEstado.traspaso.ID %>) {
        fecha = document.getElementById('fectra').value
      } else if (tipo === <%- datos.tiposEstado.conciliacion.ID %>) {
        //TODO
      } else if (tipo === <%- datos.tiposEstado.horasBolsa.ID %>) {
        //TODO
      }

      const evento = {
        estado: {
          FECEST: fecha,
          USUEST: params.usuest,
          TIPEST: tipo,
          OFIEST: destino,
          DESHOR: '+00 08:30:00',
          HASHOR: '+00 14:00:00',
        },
        movimiento: {
          USUMOV: <%- user.id %>,
          TIPMOV: <%- datos.tiposMovimiento.crearEstado %>
        }
      }

      await insertEvento(evento)
    }
    const arrayFilterOficinas = (oficina) => {
      const trimmedData = orgList.filter(itm => itm.OFIUSU === parseInt(oficina))
      const myLista = trimmedData
      const cbo = document.getElementById('cbousu')
      cbo.innerHTML = "";

      myLista.map(itm => {
        const option = document.createElement('option')
        option.value = itm.IDUSUA
        option.text = itm.NOMUSU

        if (itm.IDUSUA === <%- user.id %>) {
          option.selected = true
        }

        cbo.appendChild(option)
      })
      params.usuest = document.getElementById('cbousu').value
      params.tipest = 0

      document.getElementById('cboest').selectedIndex = params.tipest
    }
    const getEstadosTipo = (tipo) => {
      const estadosTipo = tipo === 0 ? estados : estados.filter(itm => itm.TIPEST === 0 || itm.TIPEST === parseInt(tipo))
      let data = []

      estadosTipo.map(itm => {
        const estado = {
          idesta: itm.IDESTA,
          usuest: itm.USUEST,
          tipest: itm.TIPEST,
          id: itm.IDESTA,
          startDate: new Date(itm.FECEST),
          endDate: new Date(itm.FECEST),
          color: colores[itm.TIPEST].COLOR,
        }
        data.push(estado)
      })
      calendario.setDataSource(data)
    }
    const editEvento = (e) => {
      const fecha = e.date.toLocaleDateString(undefined, {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
      })

      if (tipo === <%- datos.tiposEstado.traspaso.ID %>) {
        const modalTraspaso = document.getElementById('modal-tras')

        document.getElementById('fectra').value = fecha
        modalTraspaso.style.display = 'flex'
      } else if (tipo === <%- datos.tiposEstado.conciliacion.ID %>) {
        const modalBolsa = document.getElementById('modal-bolsa')

        document.getElementById('feccon').value = fecha
        modalBolsa.style.display = 'flex'
      } else if (tipo === <%- datos.tiposEstado.horasBolsa.ID %>) {
        const modalBolsa = document.getElementById('modal-bolsa')

        document.getElementById('fecbol').value = fecha
        modalBolsa.style.display = 'flex'
      }
    }
  </script>
  <script>
    const orgList = <%- JSON.stringify(datos.usuarios) %>
    const colores = <%- JSON.stringify(datos.arrColoresEstado) %>

    let destino = 0
    let estados = null
    let calendario = null
    let color = ''
    let tipo = 0
    let currentYear = new Date().getFullYear()
    let params = {
      idofic: <%- user.oficina %>,
      usuest: <%- user.id %>,
      tipest: 0,
      desde: new Date(currentYear, 0, 1).toLocaleDateString(undefined, {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      }),
      hasta: new Date(currentYear, 11, 31).toLocaleDateString(undefined, {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      }),
    }

    calendario = new Calendar("#calendar", {
      minDate: new Date(currentYear, 0, 1),
      maxDate: new Date(currentYear, 11, 31),
      language: "es",
      mouseOnDay: function(e) {
        if (e.events.length > 0) {
          e.element.setAttribute('data-bs-trigger', 'hover')
          e.element.setAttribute('data-bs-toggle', 'popover')
          e.element.setAttribute('title', colores[e.events[0].tipest].DES)
        }
      },
    })

    // modal
    document.getElementById('btnCancel').addEventListener('click', function() {
      document.getElementById('modal-tras').style.display = 'none'
    })
    document.addEventListener('keydown', function(e) {
      const mTraspaso = document.getElementById('modal-tras')
      const keyCode = e.keyCode;

      if (keyCode === 27 && mTraspaso.style.display === 'flex') {
        mTraspaso.style.display = 'none'
      }
    })

    // calendario
    document.getElementById('cboyea').addEventListener('change', function() {
      calendario.setYear(document.querySelector("#cboyea").value);
      calendario.setMinDate(new Date(document.querySelector("#cboyea").value, 0, 1));
      calendario.setMaxDate(new Date(document.querySelector("#cboyea").value, 11, 31));

      currentYear = parseInt(document.querySelector("#cboyea").value)
      params.desde = new Date(document.querySelector("#cboyea").value, 0, 1).toLocaleDateString(undefined, {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      })
      params.hasta = new Date(document.querySelector("#cboyea").value, 11, 31).toLocaleDateString(undefined, {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit'
      })

      estadosUsuario(params, tipo)
    });
    document.getElementById('cboofi').addEventListener('change', function() {
      params.idofic = parseInt(this.value)

      arrayFilterOficinas(params.idofic)
      estadosUsuario(params, tipo)
    });
    document.getElementById('cbodes').addEventListener('change', function() {
      destino = parseInt(this.value)
    });
    document.getElementById('cbousu').addEventListener('change', function() {
      document.getElementById('idusua').value = this.value
      params.usuest = parseInt(this.value)

      document.getElementById('cboest').selectedIndex = tipo
      estadosUsuario(params, tipo)
    });
    document.getElementById('cboest').addEventListener('change', function() {
      document.getElementById('tipest').value = this.value

      color = document.getElementById("cboest").options[document.getElementById("cboest").selectedIndex].getAttribute('data-foo')
      tipo = parseInt(this.value)

      estadosUsuario(params, parseInt(this.value))
    });
    document.querySelector('#calendar').addEventListener('clickDay', async function(e) {
      // bloquear festivos
      if (e.events.length > 0 &&
        e.events[0].idesta === 0 ||
        e.element.classList.contains('domingo') ||
        color === '') {
        return
      }
      // bloquear solapes
      const fecha = e.date.toLocaleDateString(undefined, {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
      })

      const result = estados.find(itm => itm.STRFEC === fecha)
      if (result) {
        if (result.TIPEST !== tipo) {
          e.element.setAttribute('data-bs-trigger', 'hover')
          e.element.setAttribute('data-bs-toggle', 'popover')
          e.element.setAttribute('title', 'Solape de horas')
          return
        }
      }

      if (e.events.length === 0 && tipo === <%- datos.tiposEstado.traspaso.ID %>) {
        editEvento(e)
      } else if (e.events.length === 0 && tipo === <%- datos.tiposEstado.horasBolsa.ID %>) {
        editEvento(e)
      } else {
        if (e.element.style.boxShadow) {
          e.element.style.boxShadow = null
        } else {
          e.element.style.boxShadow = color + ' 0px -4px 0px 0px inset'
        }

        if (e.events.length) {
          if (e.events[0].id > 0) {
            const evento = {
              estado: {
                IDESTA: e.events[0].idesta,
              },
              movimiento: {
                USUMOV: <%- user.id %>,
                TIPMOV: <%- datos.tiposMovimiento.borrarEstado %>
              }
            }

            await deleteEvento(evento)
          }
        } else {
          const evento = {
            estado: {
              FECEST: e.date.toLocaleDateString(undefined, {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit'
              }),
              USUEST: params.usuest,
              TIPEST: tipo,
              OFIEST: params.idofic,
              DESHOR: '+00 08:30:00',
              HASHOR: '+00 14:00:00',
            },
            movimiento: {
              USUMOV: <%- user.id %>,
              TIPMOV: <%- datos.tiposMovimiento.crearEstado %>
            }
          }

          await insertEvento(evento)
        }
      }
    })

    arrayFilterOficinas(params.idofic)
    estadosUsuario(params, tipo)
  </script>

</body>

</html>