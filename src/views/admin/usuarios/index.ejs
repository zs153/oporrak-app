<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Usuarios</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'ADMINISTRACION' }) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Usuarios</h3>
                  <div class="col-auto ms-auto">
                    <div class="d-flex">
                      <form action="/admin/usuarios" method="GET">
                        <div class="input-icon me-3">
                          <span class="input-icon-addon">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                              viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                              stroke-linecap="round" stroke-linejoin="round">
                              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                              <circle cx="10" cy="10" r="7"></circle>
                              <line x1="21" y1="21" x2="15" y2="15"></line>
                            </svg>
                          </span>
                          <input type="text" class="form-control d-inline-block me-3" id="buscarUserBox" name="part"
                            placeholder="Buscar..." aria-label="Buscar en usuarios">
                        </div>
                      </form>
                      <a href="/admin/usuarios/add" class="btn">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" height="24" width="24" viewBox="0 0 24 24">
                          <path d="M11.25 18.75v-6h-6v-1.5h6v-6h1.5v6h6v1.5h-6v6Z" />
                        </svg>
                        Nuevo Usuario
                      </a>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <table class="table table-vcenter table-striped sortable" id="tblUsuarios">
                    <thead>
                      <tr class="header">
                        <th class="w-4"></th>
                        <th>Nombre</th>
                        <th>Oficina</th>
                        <th class="w-5"></th>
                      </tr>
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                  </table>
                  <div id="pagination-wrapper" class="py-1"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>

  <div class="modal modal-blur fade" id="modal-borrar" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
      <div class="modal-content">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <div class="modal-status bg-danger"></div>
        <div class="modal-body text-center py-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24"
            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M12 9v2m0 4v.01"></path>
            <path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"></path>
          </svg>
          <h3>Â¿Desea borrar este usuario?</h3>
          <div id="msgbor"></div>
          <div class="text-muted">Lo que vas a hacer no puede ser recuperado.</div>
        </div>
        <div class="modal-footer">
          <div class="w-100">
            <div class="row">
              <div class="col">
                <a href="#" class="btn btn-white w-100" data-bs-dismiss="modal">Cancelar</a>
              </div>
              <div class="col">
                <form action="/admin/usuarios/delete" method="POST">
                  <input type="hidden" id="idusua" name="idusua" value="">
                  <button type="submit" class="btn btn-danger w-100" id="btnUpdate">Borrar usuario</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/usuario.js"></script>
  <script>
    const orgList = <%- JSON.stringify(datos.usuarios) %>
    const estadosUsuario = <%- JSON.stringify(datos.estadosUsuario) %>
    const cursor = <%- JSON.stringify(datos.cursor) %>
    const hasNextUsers = <%- datos.hasNextUsers %>
    const hasPrevUsers = <%- datos.hasPrevUsers %>

    let state = {
      'querySet': orgList,
      'page': 1,
      'rows': 10,
    }

    // events
    const elemBuscar = document.getElementById('buscarUserBox');
    elemBuscar.onchange = (event) => {
      setCookie('filtro', event.target.value, .5) // medio dia
    }
    elemBuscar.value = getCookie('filtro')
    
    buildTable(state)
  </script>
</body>

</html>