<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Festivos</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'ADMINISTRACION' }) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card mt-1">
                <form action="/admin/festivos/calendario" method="POST">
                  <input type="hidden" id="desofi" name="desofi" value="">
                  <div class="card-header">
                    <h3 class="card-title">Festivos</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <div class="form-label">Oficina</div>
                          <select class="form-select" id="cboofi" name="idofic" value="">
                            <option value="0">FESTIVOS COMUNES</option>
                            <% datos.oficinas.map(element=> { %>
                            <option value="<%- element.IDOFIC %>" %>>
                              <%- element.DESOFI %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <button type="submit" id="btnVer" class="btn btn-success ms-auto">Ver calendario</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script>
    document.getElementById('btnVer').addEventListener('click', () => {
      document.getElementById('desofi').value = document.getElementById('cboofi').options[document.getElementById('cboofi').selectedIndex].text
    })
  </script>
</body>

</html>