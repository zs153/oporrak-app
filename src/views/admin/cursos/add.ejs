<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Cursos</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'ADMINISTRACION' }) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <form action="#" id="add" method="POST" onsubmit="return validate();">
                  <div class="card-header">
                    <h3 class="card-title">Curso</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Descripción</label>
                            <input type="text" name="descur" id="descur" class="form-control" value="" style="text-transform: uppercase;" autofocus />
                            <div class="invalid-feedback"></div>                            
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-4">
                        <div class="mb-1">
                          <label class="form-label">Duración</label>
                          <input type="text" name="durcur" id="durcur" class="form-control" value="" />
                        </div>
                      </div>
                      <div class="col-4">
                        <div class="mb-1">
                          <label class="form-label">Ponente</label>
                          <input type="text" name="poncur" id="poncur" class="form-control" value="" />
                          <div class="invalid-feedback"></div>
                        </div>
                      </div>
                      <div class="col-4">
                        <div class="mb-1">
                          <div class="input-control">
                            <div class="form-label required">Estado</div>
                            <select class="form-select form-control" id="cboest" name="stacur" value="">
                              <option value="-1">SELECCIONE ESTADO</option>
                              <% datos.arrEstadosCurso.map(element=> { %>
                                <option value="<%= element.id %>">
                                  <%- element.des %>
                                </option>
                                <% }) %>
                            </select>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <div class="form-label">Información adicional</div>
                          <textarea name="notcur" id="notcur" class="form-control" rows="3" style="resize: vertical"></textarea>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <input class="btn btn-white" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancelar" />
                      <button type="submit" class="btn btn-primary ms-auto" id="btnInsert">Crear nuevo curso</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/addEditCursos.min.js"></script>
  <script>
    const elemAdd = document.getElementById('add')
    elemAdd.setAttribute('action', `/admin/cursos/insert?part=${getCookie('filtro')}`)
  </script>
</body>

</html>