<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Evento</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- bootstrap -->
  <link rel="stylesheet" href="/css/bootstrap-icons.css">
  <!-- custom -->
  <link rel="stylesheet" href="/css/estilos.min.css">
  <link rel="stylesheet" href="/css/navbar.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../../partials/header') %>
      <%- include('../../../partials/navbar', {opcion: 'ADMINISTRACION' }) %>
        <div class="page-wrapper">
          <div class="page-body">
            <div class="container-xl">
              <div class="row">
                <div class="col-12">
                  <div class="card">
                    <% if(typeof alerts !='undefined' ) { %>
                      <% alerts.map(function (alert){ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                          <%- alert.msg %>
                        </div>
                        <% }) %>
                          <% } %>
                            <form action="/admin/cursos/turnos/insert" method="POST" onsubmit="return validate();">
                              <input type="hidden" id="idcurs" name="idcurs" value="<%- datos.curso.idcurs %>">
                              <div class="card-header">
                                <h3 class="card-title">Nuevo turno</h3>
                              </div>
                              <div class="card-body">
                                <div class="row">
                                  <div class="col-12">
                                    <div class="mb-1">
                                      <div class="input-control required">
                                        <label class="form-label required">Descripción</label>
                                        <input type="text" name="destur" id="destur" class="form-control" style="text-transform: uppercase;" value="<%- datos.turno.destur %>" />
                                        <div class="invalid-feedback"></div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col-3">
                                    <div class="mb-1">
                                      <div class="input-control">
                                        <label class="form-label required">Fecha inicio</label>
                                        <input type="date" name="initur" id="initur" class="form-control" value="<%- datos.turno.strini %>" />
                                        <div class="invalid-feedback"></div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="col-3">
                                    <div class="mb-1">
                                      <div class="input-control">
                                        <label class="form-label required">Fecha fin</label>
                                        <input type="date" name="fintur" id="fintur" class="form-control" value="<%- datos.turno.strfin %>" />
                                        <div class="invalid-feedback"></div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="col-3">
                                    <div class="mb-1">
                                      <div class="input-control">
                                        <label class="form-label required">Hora inicio</label>
                                        <input type="time" name="inihor" id="inihor" class="form-control" value="<%- datos.turno.inihor %>" />
                                        <div class="invalid-feedback"></div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="col-3">
                                    <div class="mb-1">
                                      <div class="input-control">
                                        <label class="form-label required">Hora fin</label>
                                        <input type="time" name="finhor" id="finhor" class="form-control" value="<%- datos.turno.finhor %>" />
                                        <div class="invalid-feedback"></div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col-12">
                                    <div class="mb-1">
                                      <div class="input-control required">
                                        <label class="form-label required">Localización</label>
                                        <input type="text" name="loctur" id="loctur" class="form-control" style="text-transform: uppercase;" value="<%- datos.turno.loctur %>" />
                                        <div class="invalid-feedback"></div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="card-footer text-end">
                                <div class="d-flex">
                                  <a href="/admin/cursos/turnos/<%- datos.curso.idcurs %>" class="btn btn-link">Cancelar</a>
                                  <button type="submit" class="btn btn-primary ms-auto" id="btnInsert">Crear turno</button>
                                </div>
                              </div>
                            </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%- include('../../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
</body>

</html>