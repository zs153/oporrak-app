<body class="antialiased">
  <div class="wrapper">
    <%- include('../../../../partials/header') %>
      <%- include('../../../../partials/navbar', {opcion: 'ADMINISTRACION' }) %>
        <div class="page-wrapper">
          <div class="container-xl">
            <div class="page-body">
              <div class="row row-deck row-cards">
                <form id="form" action="/admin/cursos/turnos/usuarios/insert" method="POST" onsubmit="return addUsuarios();">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-header">
                        <div>
                          <h3 class="card-title">Usuarios disponibles</h3>
                          <p class="subtitulo">
                            <%- datos.curso.descur %>
                          </p>
                        </div>
                        <div class="col-auto ms-auto">
                          <div class="d-flex">
                            <div class="input-icon me-3">
                              <span class="input-icon-addon"><i class="bi bi-search"></i></span>
                              <input type="text" class="form-control d-inline-block me-3" id="buscarUsuarioBox"
                                onkeyup="arrayFilter();" placeholder="Buscar..." aria-label="Buscar en sms">
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="card-body">
                        <table class="table table-vcenter table-striped sortable" id="tblUsuarios">
                          <thead>
                            <tr class="header">
                              <th class="w-4"></th>
                              <th>Oficina</th>
