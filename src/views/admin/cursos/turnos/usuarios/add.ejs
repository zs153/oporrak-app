                      <a href="/admin/cursos/turnos/usuarios/<%- datos.turnocurso.idcurs %>/<%- datos.turnocurso.idturn %>" class="btn btn-link">Salir</a>
                      <input type="hidden" name="idcurs" id="idcurs" value="<%- datos.turnocurso.idcurs %>">
                      <input type="hidden" name="idturn" id="idturn" value="<%- datos.turnocurso.idturn %>">
                      <input type="hidden" name="arrusu" id="arrusu" value="">
