<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Certificaciones</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../../partials/header') %>
    <%- include('../../../partials/navbar', {opcion: 'CURSO' }) %>
    <div class="page-wrapper">
      <div class="container-xl">
        <div class="page-body">
          <div class="row">
            <form id="form" action="/admin/cursos/usuarios/insert" method="POST" onsubmit="return addUsuarios();">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <div>
                      <h3 class="card-title">Certificaciones</h3>
                        <span class="text-muted">
                          <small><%- datos.curso.DESCUR %></small>
                        </span>
                    </div>
                    <div class="col-auto ms-auto">
                      <div class="d-flex">
                        <div class="input-icon me-3">
                          <span class="input-icon-addon">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                            stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <circle cx="10" cy="10" r="7"></circle>
                            <line x1="21" y1="21" x2="15" y2="15"></line>
                            </svg>
                          </span>
                          <input type="text" class="form-control d-inline-block me-3" id="buscarUsuarioBox" onkeyup="arrayFilter();" placeholder="Buscar..." aria-label="Buscar en sms">
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <table class="table table-vcenter table-striped sortable" id="tblUsuarios">
                      <thead>
                        <tr class="header">
                          <th class="w-4"></th>
                          <th>Nombre</th>
                        </tr>
                      </thead>
                      <tbody id="table-body">
                      </tbody>
                    </table>
                    <div id="pagination-wrapper" class="py-1"></div>
                  </div>
                    <div class="card-footer">
                      <div class="col-12 d-flex">
                        <a href="/admin/cursos/usuarios/<%- datos.curso.IDCURS %>" class="btn btn-link">Volver</a>
                        <input type="hidden" name="arrusu" id="arrusu" value="">
                        <input type="hidden" name="idcurs" id="idcurs" value="<%- datos.curso.IDCURS %>">
                        <button type="submit" class="btn btn-link ms-auto" id="btnAdd">Certificar usuarios</button>
                      </div>
                    </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/certificarUsuarios.js"></script>
  <script>
    const orgList = <%- JSON.stringify(datos.usuarios) %>
    let state = {
      'querySet': orgList,
      'page': 1,
      'rows': 14,
    }

    buildTable(state)
  </script>
</body>

</html>