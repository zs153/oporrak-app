<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro</title>
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
    <!-- bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap-icons.css" />
    <!-- CSS files -->
    <link rel="stylesheet" href="/css/estilos.min.css" />
  </head>
  <body class="antialiased border-top-wide border-primary d-flex flex-column">
    <div class="flex-fill d-flex flex-column justify-content-center py-4">
      <div class="container-tight py-6">
        <div class="text-center mb-4">
          <a href="."
            ><img src="/img/logoFormularios.png" height="36" alt=""
          /></a>
        </div>
        <% if(typeof alerts !='undefined' ) { %> <% alerts.map(function (alert){
        %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <%- alert.msg %>
        </div>
        <% }) %> <% } %>
        <form
          action="/log/registro"
          method="POST"
          class="card card-md"
          autocomplete="off"
          onsubmit="return validate();"
        >
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Registro de usuario</h2>
            <div class="mb-2">
              <label class="form-label required">UserID</label>
              <input
                type="text"
                class="form-control"
                name="userid"
                id="userid"
                onkeyup="this.value = this.value.toLowerCase();"
                value="<%- datos.userid %>"
                autofocus
              />
              <div class="invalid-feedback"></div>
            </div>
            <div class="mb-2">
              <label class="form-label required">Nombre</label>
              <input
                type="text"
                class="form-control"
                name="nomusu"
                id="nomusu"
                style="text-transform: uppercase;"
                value="<%- datos.nomusu %>"
              />
              <div class="invalid-feedback"></div>
            </div>
            <div class="mb-2">
              <label class="form-label required">Correo electrónico</label>
              <input
                type="text"
                class="form-control"
                name="emausu"
                id="emausu"
                value="<%- datos.emausu %>"
              />
              <div class="invalid-feedback"></div>
            </div>
            <div class="form-footer">
              <button type="submit" class="btn btn-primary w-100">
                Crear nueva cuenta
              </button>
            </div>
          </div>
        </form>
        <div class="text-center text-muted mt-3">
          Ya estoy registrado
          <a href="/log/login">Iniciar sesión</a>
        </div>
      </div>
    </div>
    <script src="/js/ayuda.min.js"></script>
    <script>
      const userid = document.getElementById('userid')
      const nomusu = document.getElementById('nomusu')
      const emausu = document.getElementById('emausu')

      const validate = () => {
        const useridValue = userid.value.trim()
        const nomusuValue = nomusu.value.trim()
        const emausuValue = emausu.value.trim()

        if (useridValue === '') {
          setError(userid, 'UserID requerido')
          return false
        } else {
          setSuccess(userid)
        }
        if (nomusuValue === '') {
          setError(nomusu, 'Nombre requerido')
          return false
        } else {
          setSuccess(nomusu)
        }
        if (emausuValue === '') {
          setError(emausu, 'Email requerido')
          return false
        } else {
          setSuccess(emausu)
        }

        return true
      }

      const setSuccess = (element) => {
        const inputControl = element.parentElement
        const errorDisplay = inputControl.querySelector('.invalid-feedback')

        errorDisplay.innerText = ''
        inputControl.classList.add('is-valid')
        element.classList.remove('is-invalid')
      }
      const setError = (element, message) => {
        const inputControl = element.parentElement
        const errorDisplay = inputControl.querySelector('.invalid-feedback')

        errorDisplay.innerText = message
        element.classList.add('is-invalid')
        inputControl.classList.remove('is-valid')
      }
    </script>
  </body>
</html>
